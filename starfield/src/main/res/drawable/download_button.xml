<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size
                    android:width="64dp"
                    android:height="64dp"
            />
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp"
            />
            <stroke
                    android:width="2dp"
                    android:color="#aa818181"
            />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <size
                    android:width="64dp"
                    android:height="64dp"
            />
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp"
            />
            <stroke
                    android:width="2dp"
                    android:color="#aaffffff"
            />
        </shape>
    </item>
</selector>
